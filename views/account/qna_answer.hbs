<div class="container main-page">
   {{>dashbord_menu  }}

   <div class="card mt-3">
      <div class="card-body">
        <div class="row">
            <div class="col-sm-12 col-md-2">
               <img src="/images/{{qna.avator}}" width="100%"/> 
            </div>
            <div class="col-sm-12 col-md-10">
                <p><b>{{qna.askedby}} </b>what to know this</p>
               <p><b>Question : </b>{{qna.question}}</p>
               <p><b>Phone number : </b>{{qna.phone_number}}</p>
            </div>
        </div>
      </div>
   </div>
   
   <div class="card mt-3">
        <div class="card-header">
            <h5 id="form-head">Add Audio</h5>
        </div>
        <div class="card-body">
            <form action="" method="post" encType="">
                <div class="row">
                    <div class="col-sm-12 col-md-12">
                        <div class="form-group">
                        <label for="question">Question</label>
                        <input type="text" name="question" value="{{qna.question}}" class="form-control" required="true" placeholder="title of the audio">
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="form-group">
                            <label for="status">Status</label>
                            <select class="form-control" id="status" name="status">
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div> 
                    </div>
                    <div class="col-sm-12 col-md-12">
                        <label for="answer">Answer here</label>
                        <textarea class="form-control" required="true" name="answer" id="answer" cols="30" rows="5">{{qna.answer}}</textarea>
                    </div>
                </div>

                <input type="submit" class="mt-3 btn btn-secondary" value="Submit"/>
                <span class="ml-3"></span>
            </form>
        </div>
    </div>
</div>
